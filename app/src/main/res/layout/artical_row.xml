<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="20dp"
    app:cardCornerRadius="15dp"
    android:elevation="5dp"
    android:layout_marginTop="10dp"
    style="@style/input_background"
    android:id="@+id/artical_row">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/artical_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/image_overview"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            android:layout_marginEnd="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/artical_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="this is the title"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="3"
                style="@style/primary_text"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:id="@+id/artical_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="this is the source"
                android:textSize="14sp"
                android:maxLines="3"
                style="@style/secondary_text"
                android:layout_marginBottom="8dp"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>